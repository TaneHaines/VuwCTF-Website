<div class="container mt-4">
    <div class="row">
        <div class="col-12">
            <div class="d-flex justify-content-between align-items-center mb-4">
                <h1>Challenge Management</h1>
                <div>
                    <button type="button" class="btn btn-success" data-bs-toggle="modal" data-bs-target="#createChallengeModal">
                        <i class="bi bi-plus-circle"></i> New Challenge
                    </button>
                    <a href="/admin" class="btn btn-secondary ms-2">
                        <i class="bi bi-arrow-left"></i> Back to Dashboard
                    </a>
                </div>
            </div>

            <!-- Challenges Table -->
            <div class="card">
                <div class="card-header">
                    <h5 class="mb-0">All Challenges</h5>
                </div>
                <div class="card-body">
                    <div class="table-responsive">
                        <table class="table table-hover">
                            <thead>
                                <tr>
                                    <th>ID</th>
                                    <th>Name</th>
                                    <th>Category</th>
                                    <th>Points</th>
                                    <th>Actions</th>
                                </tr>
                            </thead>
                            <tbody>
                                <% challenges.forEach(challenge => { %>
                                    <tr>
                                        <td><%= challenge.id %></td>
                                        <td><%= challenge.name %></td>
                                        <td>
                                            <span class="badge bg-<%= getBadgeColor(challenge.category) %>">
                                                <%= challenge.category %>
                                            </span>
                                        </td>
                                        <td><%= challenge.points %></td>
                                        <td>
                                            <div class="btn-group">
                                                <button type="button" class="btn btn-sm btn-primary" 
                                                    data-bs-toggle="modal" 
                                                    data-bs-target="#editChallengeModal<%= challenge.id %>">
                                                    <i class="bi bi-pencil"></i> Edit
                                                </button>
                                                <button type="button" class="btn btn-sm btn-danger" 
                                                    data-bs-toggle="modal" 
                                                    data-bs-target="#deleteChallengeModal<%= challenge.id %>">
                                                    <i class="bi bi-trash"></i> Delete
                                                </button>
                                            </div>

                                            <!-- Edit Challenge Modal -->
                                            <div class="modal fade" id="editChallengeModal<%= challenge.id %>" tabindex="-1" data-bs-backdrop="false">
                                                <div class="modal-dialog modal-lg">
                                                    <div class="modal-content">
                                                        <div class="modal-header">
                                                            <h5 class="modal-title">Edit Challenge</h5>
                                                            <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                                                        </div>
                                                        <div class="modal-body">
                                                            <form action="/admin/challenges/<%= challenge.id %>/update" method="POST">
                                                                <div class="mb-3">
                                                                    <label for="name<%= challenge.id %>" class="form-label">Name</label>
                                                                    <input type="text" class="form-control" id="name<%= challenge.id %>" name="name" value="<%= challenge.name %>" required>
                                                                </div>
                                                                <div class="mb-3">
                                                                    <label for="description<%= challenge.id %>" class="form-label">Description</label>
                                                                    <textarea class="form-control" id="description<%= challenge.id %>" name="description" rows="3" required><%= challenge.description %></textarea>
                                                                </div>
                                                                <div class="mb-3">
                                                                    <label for="flag<%= challenge.id %>" class="form-label">Flag</label>
                                                                    <input type="text" class="form-control" id="flag<%= challenge.id %>" name="flag" value="<%= challenge.flag %>" required>
                                                                </div>
                                                                <div class="row">
                                                                    <div class="col-md-6">
                                                                        <div class="mb-3">
                                                                            <label for="points<%= challenge.id %>" class="form-label">Points</label>
                                                                            <input type="number" class="form-control" id="points<%= challenge.id %>" name="points" value="<%= challenge.points %>" required>
                                                                        </div>
                                                                    </div>
                                                                    <div class="col-md-6">
                                                                        <div class="mb-3">
                                                                            <label for="category<%= challenge.id %>" class="form-label">Category</label>
                                                                            <select class="form-select" id="category<%= challenge.id %>" name="category" required>
                                                                                <option value="Web" <%= challenge.category === 'Web' ? 'selected' : '' %>>Web</option>
                                                                                <option value="Crypto" <%= challenge.category === 'Crypto' ? 'selected' : '' %>>Crypto</option>
                                                                                <option value="OSINT" <%= challenge.category === 'OSINT' ? 'selected' : '' %>>OSINT</option>
                                                                                <option value="Stego" <%= challenge.category === 'Stego' ? 'selected' : '' %>>Stego</option>
                                                                                <option value="Forensics" <%= challenge.category === 'Forensics' ? 'selected' : '' %>>Forensics</option>
                                                                                <option value="Reverse" <%= challenge.category === 'Reverse' ? 'selected' : '' %>>Reverse</option>
                                                                                <option value="Binary" <%= challenge.category === 'Binary' ? 'selected' : '' %>>Binary</option>
                                                                            </select>
                                                                        </div>
                                                                    </div>
                                                                </div>
                                                                <div class="modal-footer">
                                                                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                                                                    <button type="submit" class="btn btn-primary">Save Changes</button>
                                                                </div>
                                                            </form>
                                                        </div>
                                                    </div>
                                                </div>
                                            </div>

                                            <!-- Delete Challenge Modal -->
                                            <div class="modal fade" id="deleteChallengeModal<%= challenge.id %>" tabindex="-1" data-bs-backdrop="false">
                                                <div class="modal-dialog">
                                                    <div class="modal-content">
                                                        <div class="modal-header">
                                                            <h5 class="modal-title">Delete Challenge</h5>
                                                            <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                                                        </div>
                                                        <div class="modal-body">
                                                            <p>Are you sure you want to delete challenge "<%= challenge.name %>"?</p>
                                                            <p class="text-danger">This action cannot be undone.</p>
                                                        </div>
                                                        <div class="modal-footer">
                                                            <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                                                            <form action="/admin/challenges/<%= challenge.id %>/delete" method="POST" class="d-inline">
                                                                <button type="submit" class="btn btn-danger">Delete Challenge</button>
                                                            </form>
                                                        </div>
                                                    </div>
                                                </div>
                                            </div>
                                        </td>
                                    </tr>
                                <% }); %>
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Create Challenge Modal -->
<div class="modal fade" id="createChallengeModal" tabindex="-1" data-bs-backdrop="false">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Create New Challenge</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <form action="/admin/challenges/create" method="POST">
                <div class="modal-body">
                    <div class="mb-3">
                        <label for="name" class="form-label">Name</label>
                        <input type="text" class="form-control" id="name" name="name" required>
                    </div>
                    <div class="mb-3">
                        <label for="description" class="form-label">Description</label>
                        <textarea class="form-control" id="description" name="description" rows="3" required></textarea>
                    </div>
                    <div class="mb-3">
                        <label for="flag" class="form-label">Flag</label>
                        <input type="text" class="form-control" id="flag" name="flag" required>
                    </div>
                    <div class="row">
                        <div class="col-md-6">
                            <div class="mb-3">
                                <label for="points" class="form-label">Points</label>
                                <input type="number" class="form-control" id="points" name="points" required>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="mb-3">
                                <label for="category" class="form-label">Category</label>
                                <select class="form-select" id="category" name="category" required>
                                    <option value="Web">Web</option>
                                    <option value="Crypto">Crypto</option>
                                    <option value="OSINT">OSINT</option>
                                    <option value="Stego">Stego</option>
                                    <option value="Forensics">Forensics</option>
                                    <option value="Reverse">Reverse</option>
                                    <option value="Binary">Binary</option>
                                </select>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                    <button type="submit" class="btn btn-success">Create Challenge</button>
                </div>
            </form>
        </div>
    </div>
</div>

<script>
    // Add modal initialization code
    document.addEventListener('DOMContentLoaded', function() {
        // Initialize all modals without backdrop
        const modals = document.querySelectorAll('.modal');
        modals.forEach(modal => {
            new bootstrap.Modal(modal, {
                backdrop: false,
                keyboard: false
            });
        });
    });
</script>