<header>
    <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
        <div class="container">
            <a class="navbar-brand" href="/">VUW CTF</a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarNav">
                <% if (activePage === 'challenges' || activePage === 'scoreboard' || activePage === 'login' || activePage === 'register' || activePage === 'profile') { %>
                <!-- Challenges page layout -->
                <ul class="navbar-nav me-auto">
                    <li class="nav-item">
                        <a class="nav-link <%= activePage === 'challenges' ? 'active' : '' %>" href="/challenges">Challenges</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link <%= activePage === 'scoreboard' ? 'active' : '' %>" href="/scoreboard">Scoreboard</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link <%= activePage === 'instructions' ? 'active' : '' %>" href="/instructions">Instructions</a>
                    </li>
                </ul>
                
                <ul class="navbar-nav">
                    <% if (user) { %>
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle" href="#" id="navbarDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                <i class="bi bi-person-circle me-1"></i> <%= user.username %>
                                <% if (user.points > 0) { %>
                                    <span class="badge bg-success ms-1"><%= user.points %> pts</span>
                                <% } %>
                            </a>
                            <ul class="dropdown-menu dropdown-menu-end" aria-labelledby="navbarDropdown">
                                <li><a class="dropdown-item" href="/profile"><i class="bi bi-person me-2"></i>My Profile</a></li>
                                <li><a class="dropdown-item" href="/challenges"><i class="bi bi-flag-fill me-2"></i>My Challenges</a></li>
                                <li><hr class="dropdown-divider"></li>
                                <li><a class="dropdown-item" href="/logout"><i class="bi bi-box-arrow-right me-2"></i>Logout</a></li>
                            </ul>
                        </li>
                    <% } else { %>
                        <li class="nav-item">
                            <a class="nav-link <%= activePage === 'register' ? 'active' : '' %>" href="/register">Sign Up</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link <%= activePage === 'login' ? 'active' : '' %>" href="/login">Login</a>
                        </li>
                    <% } %>
                </ul>
                <% } else { %>
                <!-- All other pages layout -->
                <ul class="navbar-nav ms-auto">
                    <li class="nav-item">
                        <a class="nav-link <%= activePage === 'home' ? 'active' : '' %>" href="/">Home</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link <%= activePage === 'about' ? 'active' : '' %>" href="/about">About</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link <%= activePage === 'events' ? 'active' : '' %>" href="/events">Events</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link <%= activePage === 'resources' ? 'active' : '' %>" href="/resources">Resources</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link <%= activePage === 'contact' ? 'active' : '' %>" href="/contact">Contact</a>
                    </li>
                </ul>
                <% } %>
            </div>
        </div>
    </nav>
</header> 